<h1 class="text-center mt-4">Create a new category</h1>
<div class="container">
  <div class="row justify-content-center">
  <div class="col-10">
      <%= form_with(model: @category,class:"shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
        <%= render 'shared/errors', obj: @category %>
        
        <div class="form-group row">
            <%= f.label :name, "Category name",class: "col-2 col-form-label text-light"%><br/>
            <div class="col-10">
              <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a category name" %>
            </div>
        </div>
        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-outline-light" %>
        </div>
      <% end %>
    </div>
  </div>
</div>